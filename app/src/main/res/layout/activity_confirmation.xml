<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.staywithme.staywithme.ConfirmationActivity">

    <VideoView
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/videoView"
        android:layout_alignParentTop="true"
        android:layout_height="200dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="8"
        android:layout_below="@+id/videoView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="63dp"
        android:id="@+id/dateText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="time"
        android:ems="6"
        android:id="@+id/timeText"
        android:layout_alignBottom="@+id/dateText"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/dateText" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="11"
        android:layout_marginTop="43dp"
        android:id="@+id/locationText"
        android:layout_width="wrap_content"
        android:layout_below="@+id/dateText"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Location :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationLabel"
        android:textSize="24sp"
        android:layout_alignBaseline="@+id/locationText"
        android:layout_alignBottom="@+id/locationText"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:id="@+id/submitButton" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:id="@+id/button5" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:id="@+id/button4" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="41dp"
        android:id="@+id/button3" />
</RelativeLayout>
